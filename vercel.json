{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "cd client && npm install --no-optional --legacy-peer-deps",
        "buildCommand": "cd client && npm install next@14.0.4 react@18.2.0 react-dom@18.2.0 --save-exact && npm run build"
      }
    }
  ],
  "env": {
    "NODE_OPTIONS": "--max_old_space_size=4096"
  }
}
